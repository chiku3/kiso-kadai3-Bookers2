<div class="container">
 <div class="row">
  
  <div class="col-lg-4">
  <%= render "users/list", user:@user, book:@book %>
  </div>
  
  <div class="col-lg-8">
  <h1>Books</h1>
    <table>
        <thead>
           <tr>
               <th>image</th>
               <th>Title</th>
               <th>Opinion</th>
           </tr>
        </thead>
        <tbody>
            <%= @books.each do |book| %>
            <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "jpg", fallback:"no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>

 </div>
</div>