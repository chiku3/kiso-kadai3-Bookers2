<div class="container">
 <div class="row">

  <div class="col-lg-4">
  <%= render "users/list", user: @user, book: @book %>
  </div>

  <div class="col-lg-8">
    <h1>Book detail</h1>
    <table class="table">
        <tbody>
            <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback:"no_image.jpg" %><br/>
                    <%= link_to @user.name, user_path(@user) %></td>
                <td><%= link_to @book.title, book_path(@book) %></td>
                <td><%= @book.body %></td>
                <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger" %></td>
                <% end %>
            </tr>
        </tbody>
    </table>
    </div>

 </div>
</div>
